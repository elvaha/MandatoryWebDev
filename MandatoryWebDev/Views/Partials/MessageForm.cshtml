@model MandatoryWebDev.Models.MessageFormModelView
@using MandatoryWebDev.Controllers
@using Umbraco.Core.Models

@{ 
    var member = umbraco.cms.businesslogic.member.Member.GetCurrentMember();
}

@using (Html.BeginUmbracoForm<MessageFormSurfaceController>("PostMessage", new { @class = "form -horizontal" }))
{
    <div class="form-group col-md-12">
        @Html.LabelFor(x => x.Title, new { @class = "control-label col-sm-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(x => x.Title)
        </div>
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(x => x.Content, new { @class = "control-label col-sm-2" })
        <div class="col-md-6">
            @Html.TextAreaFor(x => x.Content, new { @class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(x => x.Content)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-8">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
}